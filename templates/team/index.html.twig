{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body_header %}Manage Teams{% endblock %}

{% block body_toolbar %}
    <a href="{{ path('app_team_new') }}" class="btn btn-success">Create new</a>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Leader</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.leader.email }}</td>
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-secondary">Show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-primary">Edit</a>
                    {{  include('team/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
